<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.plantillakotlin.myapplication">

    <application
        android:name="base.ApplicationBase"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:supportsRtl="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:theme="@style/Theme.MyApplication"
        tools:ignore="MissingClass">
        <activity
            android:name="view.ActivityLogin"
            android:screenOrientation="portrait"
            android:exported="true"
            tools:ignore="Instantiatable">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="view.ActivitySplash"
            tools:ignore="Instantiatable" />
        <activity
            android:name="view.ActivityMain"
            android:screenOrientation="portrait"
            tools:ignore="Instantiatable" />

    </application>
<!--    AÃ‘ADIR LOS PERMISOS QUE SE NECESITEN    -->
    <uses-permission android:name="android.permission.INTERNET" />

</manifest>